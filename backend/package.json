{
  "name": "rsi-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/server.js\"",
    "dev:ts-node": "nodemon --exec \"node --max-old-space-size=4096 -r ts-node/register src/server.ts\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup-env": "node setup-env.js",
    "test-db": "node test-connection.js",
    "create-admin": "npx ts-node src/utils/createAdmin.ts",
    "update-admin-password": "npx ts-node src/utils/updateAdminPassword.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.1",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
